<h1>Log in</h1>

<%= form_tag '/login' do %>

  <div class="form-group">
  <%= label_tag :email %>
    <%= email_field_tag :email, "", class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= submit_tag "Log in", class: "btn btn-primary" %><br>
  </div>

<% end %>